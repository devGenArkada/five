// -- modal --
.md-modal {
	position: fixed;
	top: 50%;
	left: 50%;
	// width: 50%;
  width auto
	// max-width: 630px;
	min-width: 320px;
	height: auto;
	z-index: 2000;
	visibility: hidden;
	backface-visibility: hidden;
	transform: translateX(-50%) translateY(-50%);
}
.md-show {
	visibility: visible;
}
.md-overlay {
	position: fixed;
	width: 100%;
	height: 100%;
	visibility: hidden;
	top: 0;
	left: 0;
	z-index: 1000;
	opacity: 0;
	background: rgba(68, 67, 63, 0.5);
	transition: all 0.3s;
}
.md-show ~ .md-overlay {
	opacity: 1;
	visibility: visible;
}
/* Effect 1: Fade in and scale up */
.md-effect-1 .md-content {
	transform: scale(0.7);
	opacity: 0;
	transition: all 0.3s;
}
.md-show.md-effect-1 .md-content {
	transform: scale(1);
	opacity: 1;
}
