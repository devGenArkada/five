
html,
body
  font-size 10px

html
  scroll-behavior: smooth;

body
  font-family: 'AkzidenzGroteskPro-Regular', sans-serif;
  color $baseColor

a 
  color inherit
  text-decoration none
  
.hide
  display none

.blockTitleBox
  position relative
.blockTitleBox__line
  position absolute
  content ''
  width 100%
  height 1px
  background-color $baseColor
  top 50%
  z-index -1

.blockTitleBox__title
  fz(30)
  line-height (39/30)
  color: $baseColor
  position relative
  z-index 2
  width fit-content
  background-color #fff
  padding-right cw(62)

.productCard
  position relative
  .productCard__status--sale,
  .productCard__status--new
    display none
  &--sale
    .productCard__status--sale
      display block
  &--new
    .productCard__status--new
      display block

.productCardImageBlock
  display block
  position relative
  margin-bottom cw(25)
.productCard__img
  display block
  width 100%
  height auto
  object-fit cover
.productCard__statuses
  position absolute
  top 0
  left 0
.productCard__status
  font-family $fontLight
  fz(20)
  line-height (26/20)
  color #fff
  padding 6px 18px
  background-color $baseColor
.productCard__wishlistBlock
  position absolute
  top 13px
  right 22px
  z-index 3
.productCard__wishlistBlock
  .productCard__wishlist--default
    display inline
  .productCard__wishlist--added
    display none
  &--added
    .productCard__wishlist--default
      display none
    .productCard__wishlist--added
      display inline
.productCard__contentTitle
  fz(18)
  margin-bottom cw(21)
  padding-right 20%
  line-height (23/18)
  color $baseColor
.productCardPrice
  display flex
  div
    font-family $fontMd
    fz(20)
    line-height (25/20)
    color $baseColor
  .productCardPrice__old
    margin-left cw(20)
    text-decoration line-through
    color #949494
// end of common styles


// index page styles start
.firstScreen
  height 80vh
  background-image url('../images/main-bg.jpg')
  background-repeat no-repeat
  background-size cover
  background-position center top
  position relative
.firstScreen__link
  display block
  max-width 280px
  border: 2px solid #fff
  color: #fff
  fz(23)
  font-family: $fontLight
  padding 18px 44px
  margin 0 auto
  position relative
  top 65%
  @media(min-width:992px)
    &:hover
      text-decoration underline
.specialOffersBlock
  wrapper()
  padding-top cw(100)
  margin-bottom cw(120)
.specialOffersBlock__titleWrapper
  margin-bottom cw(101)
.specialOffersBlock__mainLink
  position relative
  display block
  margin-right 0
  margin-left auto
  width fit-content
  fz(20)
  line-height (26/20)
  color $baseColor
  font-family $fontLight
  padding-right 119px
  margin-bottom cw(74)
  @media(min-width: 992px)
    &:hover
      text-decoration underline
  &::after
    position absolute
    content url('../images/arrows/arrow-right1.svg')
    right 0
    top 50%
    transform translateY(-50%)
.specialOffersBlockBox
  display flex
  justify-content space-between
.specialOffers__productCard
  display block
  width 23%
  // width 23.75%





  // index page styles end